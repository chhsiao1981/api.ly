rtmp {
    server {
        listen 127.0.0.1:1935;
        chunk_size 4000;
                application hls {
            live on;
            hls on;
            hls_nested on;

            hls_path /tmp/app;
            hls_fragment 10s;

            exec /opt/ffmpeg/ffmpeg -re -i rtmp://localhost:1935/$app/$name http://localhost:8090/${name}.ffm;
        }
    }
}
